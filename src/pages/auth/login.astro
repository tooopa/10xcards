---
import "../../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { LoginPage } from "../../components/LoginPage.tsx";

export const prerender = false;

const url = new URL(Astro.request.url);
const modeParam = url.searchParams.get("mode") === "signup" ? "signup" : "signin";
const isSignup = modeParam === "signup";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content="Astro" />
    <title>Login - 10xCards</title>
  </head>
  <body>
    <div class="min-h-screen bg-background">
      <div class="grid min-h-screen grid-cols-1 gap-0 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,0.9fr)]">
        <section
          class="flex flex-col justify-between bg-gradient-to-br from-primary/10 via-background to-background px-8 py-12 lg:px-16"
        >
          <div class="space-y-6 max-w-xl">
            <p class="text-sm font-medium uppercase tracking-[0.35em] text-primary">10xCards</p>
            <div class="space-y-4">
              <h1 class="text-4xl font-bold text-foreground lg:text-5xl">
                {isSignup ? "Create better flashcards 10x faster" : "Welcome back to your AI flashcard workspace"}
              </h1>
              <p class="text-lg text-muted-foreground">
                {
                  isSignup
                    ? "Join thousands of learners who generate organized decks with just a few clicks using AI."
                    : "Pick up where you left off, review AI suggestions, and keep your decks perfectly organized."
                }
              </p>
            </div>
            <div class="flex flex-col gap-3 text-sm text-muted-foreground">
              <div class="flex items-center gap-2">
                <span class="h-2 w-2 rounded-full bg-primary"></span>
                <span>Unlimited AI flashcard generation per deck</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="h-2 w-2 rounded-full bg-primary"></span>
                <span>Smart tagging & instant search</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="h-2 w-2 rounded-full bg-primary"></span>
                <span>Everything organized in one workspace</span>
              </div>
            </div>
          </div>

          <div class="mt-10 flex flex-wrap gap-3 text-sm">
            <a
              href="/auth/login"
              class={`inline-flex items-center justify-center rounded-full border px-5 py-2.5 font-medium transition-colors ${
                !isSignup
                  ? "border-primary bg-primary text-primary-foreground"
                  : "border-border text-foreground hover:bg-muted"
              }`}
            >
              I already have an account
            </a>
            <a
              href="/auth/login?mode=signup"
              class={`inline-flex items-center justify-center rounded-full border px-5 py-2.5 font-medium transition-colors ${
                isSignup
                  ? "border-primary bg-primary text-primary-foreground"
                  : "border-border text-foreground hover:bg-muted"
              }`}
            >
              Create a new account
            </a>
          </div>
        </section>

        <section class="flex items-center justify-center px-6 py-12 sm:px-10 lg:px-16 lg:py-16">
          <div class="w-full max-w-md">
            <LoginPage client:only="react" mode={modeParam} showHeader={false} />
          </div>
        </section>
      </div>
    </div>
    <Toaster richColors closeButton client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
