---
// Generate AI Flashcards Page
import { GeneratePage } from "../components/generate-ai/GeneratePage.tsx";

// Get URL parameters for initial form values
const url = new URL(Astro.request.url);
const initialDeckId = url.searchParams.get("deck_id") || undefined;
const initialModel = url.searchParams.get("model") || undefined;
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>Generuj fiszki z AI - 10xCards</title>
    <meta
      name="description"
      content="Automatycznie generuj wysokiej jakości fiszki z tekstu źródłowego przy użyciu sztucznej inteligencji. Szybkie tworzenie materiałów do nauki."
    />
    <meta name="keywords" content="fiszki, AI, generowanie, nauka, edukacja, flashcards" />

    <!-- Open Graph -->
    <meta property="og:title" content="Generuj fiszki z AI - 10xCards" />
    <meta
      property="og:description"
      content="Automatycznie generuj wysokiej jakości fiszki z tekstu źródłowego przy użyciu sztucznej inteligencji."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/og-generate.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Generuj fiszki z AI - 10xCards" />
    <meta
      name="twitter:description"
      content="Automatycznie generuj wysokiej jakości fiszki z tekstu źródłowego przy użyciu sztucznej inteligencji."
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />
  </head>
  <body>
    <GeneratePage initialDeckId={initialDeckId} initialModel={initialModel} client:load />
  </body>
</html>
