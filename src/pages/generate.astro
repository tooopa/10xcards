---
import Layout from "@/layouts/Layout.astro";
import { FlashcardGenerationView } from "@/components/FlashcardGenerationView";

const url = new URL(Astro.request.url);
const deckId = url.searchParams.get('deck');
---

<Layout title="Generate Flashcards - 10xCards">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-4">
        <a href="/" class="hover:text-foreground transition-colors">Dashboard</a>
        <span>/</span>
        <span class="text-foreground">Generate AI Flashcards</span>
      </nav>
      <h1 class="text-4xl font-bold text-foreground mb-2">Generate AI Flashcards</h1>
      <p class="text-muted-foreground">Paste your study material and let AI create flashcards for you</p>
    </div>

    <FlashcardGenerationView deckId={deckId} client:load />
  </div>
</Layout>
