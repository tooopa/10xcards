---
import DeckList from "./DeckList.tsx";
import OnboardingGuide from "./OnboardingGuide.tsx";
import CreateDeckButton from "./CreateDeckButton.tsx";
---

<div class="min-h-screen bg-background">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-foreground mb-2">My Flashcard Decks</h1>
      <p class="text-muted-foreground">Manage your flashcard collections and start learning</p>
    </div>

    <OnboardingGuide client:load />

    <div class="mb-6 flex gap-4 flex-wrap">
      <CreateDeckButton client:load />
      <a
        href="/generate"
        class="inline-flex items-center gap-2 bg-primary text-primary-foreground px-4 py-2 rounded-lg hover:bg-primary/90 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Generate AI Flashcards
      </a>
    </div>

    <DeckList client:load />
  </div>
</div>
